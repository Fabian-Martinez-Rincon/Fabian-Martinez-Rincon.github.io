---
import 'photoswipe/style.css';
import { Image } from 'astro:assets'

const GALLERY = [
  {
    src: '/others/studis.webp',
    width: 1920,
    height: 1079,
  },
  {
    src: '/others/ORM.webp',
    width: 1920,
    height: 1079,
  },
  {
    src: '/others/1.webp',
    width: 800,
    height: 580,
  },
  {
    src: '/others/2.webp',
    width: 1049,
    height: 806,
  },
  {
    src: '/others/3.webp',
    width: 800,
    height: 611,
  },
  {
    src: '/others/4.webp',
    width: 800,
    height: 560,
  }
];

---


<section class="max-w-screen-lg mx-auto pb-12" id="gallery">
    <ul
      class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-4 lg:mx-0 lg:max-w-none lg:grid-cols-3 text-white"
    >
      {GALLERY.map((image) => (
        <li class="">
          <a
            href={image.src}
            target="_blank"
            class="relative top-0 block overflow-hidden rounded-2xl"
            data-pswp-width={image.width}
            data-pswp-height={image.height}
          >
            <figure>
              <Image
                alt={image.src}
                src={image.src}
                class="h-44 w-full object-cover"
                width={309}
                height={176}
                decoding="async"
                loading="lazy"
              />
            </figure>
          </a>
        </li>
      ))}

    </ul>
  </section>


<script>
    import PhotoSwipeLightbox from 'photoswipe/lightbox';
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#gallery',
      children: 'a',
      pswpModule: () => import('photoswipe')
    });
    lightbox.init();
</script>

