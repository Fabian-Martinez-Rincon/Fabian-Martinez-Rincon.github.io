---
// Aseg√∫rate de que estas propiedades son pasadas al componente cuando lo usas
const { url, image, title, date } = Astro.props;
---

<a href={url ?? '#'} class="" data-test="article-card">
    <div class="block overflow-hidden relative">
        <figure class="w-auto h-auto md:h-[150px]">
            <img 
                class="transition duration-300 ease-in-out hover:scale-110" 
                src={image?.url ?? 'https://docs.astro.build/assets/arc.webp'} 
                alt={title ?? 'Untitled Post'}
            >
        </figure>
        <h2 class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-80 px-4 py-2 text-lg font-semibold leading-6 text-white">
            {title ?? 'Untitled Post'}
        </h2>
    </div>
</a>

