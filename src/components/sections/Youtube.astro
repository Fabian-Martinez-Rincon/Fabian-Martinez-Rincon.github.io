---
import 'photoswipe/style.css';

const VIDEOS = [
  {
    id: 'Mdbeg4IpxkE'
  },
  {
    id: 'KB_tUK8yiSg'
  },
  {
    id: 'TjzeV7slTOc'
  },
  {
    id: 'zS4fT5KMjNY'
  }
];
---


<section class=" max-w-screen-lg mx-auto pb-12" id="gallery">
    <ul
      class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-3 lg:mx-0 lg:max-w-none lg:grid-cols-2 text-white"
    >
      {VIDEOS.map((video) => (
        <li class="">
          <lite-youtube
                class="h-44 w-full object-cover"
                videoid={video.id}
                params="controls=1"
                class="relative top-0 block overflow-hidden rounded-2xl"
                data-pswp-width="1280" 
                data-pswp-height="720"
            ></lite-youtube>
        </li>
      ))}
    </ul>
</section>

<script>
    import "@justinribeiro/lite-youtube";
    import PhotoSwipeLightbox from 'photoswipe/lightbox';
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#gallery',
      children: 'a',
      pswpModule: () => import('photoswipe')
    });
    lightbox.init();

</script>