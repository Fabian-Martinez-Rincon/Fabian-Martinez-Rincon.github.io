---
const { title, emoji='' } = Astro.props
---

<style>
    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    .animate-bounce {
        animation: bounce 1s infinite;
    }
    </style>

<section>
    <h2
    class={` flex mb-6 text-3xl font-bold gap-x-3 text-gray-500 items-center justify-center`}
  >
  <strong class="text-blue-500 bg-custom-color">
    {title}</strong>
  </h2>
</section>





