---
import Layout from "@/layouts/Layout.astro"


import Experience from "@/components/sections/Experience.astro"
import Education from "@/components/sections/Education.astro"
import Projects from "@/components/sections/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/sections/Hero.astro"

import Youtube from "@/components/sections/Youtube.astro"
import Gallery from "@/components/sections/Gallery.astro"
import Github from "@/components/sections/Github.astro"

import Video from "@/components/video/Video.astro"

import Title from "@/components/Title.astro"

---

<Layout
  title="Fabian Martinez Rincon - Backend Developer Python"
  description="Backend Developer Python"
>
  <main class="px-4 ">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-20  ">

      
    <SectionContainer id="experiencia">
      <Title title="Experiencia Laboral" emoji="💻"/>

      <Experience />
    </SectionContainer>

    <SectionContainer>

      <Title title="Emuti | Gaming Labs Sudamerica" emoji="⌨️"/>
      <Video />
    </SectionContainer>

    

    <SectionContainer id="education">
      <Title title="Educación" emoji="🎓"/>
      <Education />
    </SectionContainer>

    <SectionContainer id="github">
      <Title title="Licenciatura en Sistemas" emoji="🤓"/>

      <Github />
    </SectionContainer>

    <SectionContainer id="galeria">
      <Title title="Eventos | Reconocimientos" emoji="🎖️"/>
      <Gallery />

    </SectionContainer>

    <SectionContainer id="videos">

      <Title title="Canal de Youtube" emoji="🎬"/>
      
      <Youtube />

    </SectionContainer>


    <SectionContainer id="proyectos">
      <h2
        class="flex mb-6 text-3xl font-extrabold  gap-x-3 text-black items-center justify-center flex2"
      >
        Otros  <span class="text-blue-600 dark:text-blue-500"> Proyectos</span>
      </h2>
      <Projects />
    </SectionContainer>
  
  </div>
  </main>
</Layout>
