---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/sections/AboutMe.astro"
import Briefcase from "@/components/icons/IconBriefcase.astro"
import YoutubeIcon from "@/components/icons/IconYoutube.astro"
import CamIcon from "@/components/icons/IconCam.astro"
import GithubIcon from "@/components/icons/GithubIcon.astro"
import StudenIcon from "@/components/icons/IconStuden.astro"

import CodeIcon from "@/components/icons/IconCode.astro"
import Experience from "@/components/sections/Experience.astro"
import Education from "@/components/sections/Education.astro"
import ProfileCheck from "@/components/icons/IconProfileCheck.astro"
import Projects from "@/components/sections/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/sections/Hero.astro"

import Youtube from "@/components/sections/Youtube.astro"
import Gallery from "@/components/sections/Gallery.astro"
import Github from "@/components/sections/Github.astro"

---

<Layout
  title="Fabian Martinez Rincon - Backend Developer Python"
  description="Backend Developer Python"
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="experiencia">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Briefcase class="size-8" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="education">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <StudenIcon class="size-8" />
        Educación
      </h2>
      <Education />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-8" />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="galeria">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <CamIcon class="size-8" />
        Galería (Una foto dice más que mil palabras)
      </h2>
      <Gallery />

    </SectionContainer>

    <SectionContainer id="videos">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <YoutubeIcon class="size-8" />
        Videos programando cosas random
      </h2>
      
      <Youtube />

    </SectionContainer>

    <SectionContainer id="github">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <GithubIcon class="size-8" />
        Algunos repositorios de mi Github
      </h2>
      
      <Github />
    </SectionContainer>
  </div>
  </main>
</Layout>
